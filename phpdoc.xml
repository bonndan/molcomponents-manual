<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
    <parser>
        <default-package-name>MolComponents</default-package-name>
        <target>doc</target>
    </parser>
    <transformer>
        <target>doc</target>
    </transformer>
    <files>
        <directory>vendor/matthimatiker</directory>
        <ignore>tests/*</ignore>
    </files>
    <plugins>
        <plugin path="vendor/bonndan/MdMan">
            <option>
                <name>outDir</name>
                <value>manual</value>
            </option>
            <option>
                <name>outFile</name>
                <value>molcomponents.md</value>
            </option>
            <option>
                <name>pandoc-template</name>
                <value>assets/head.sty</value>
            </option>
            <option>
                <name>writer</name>
                <value>MdMan_Writer_ByPackageAndClass</value>
            </option>
        </plugin>
    </plugins>
</phpdocumentor>
